<div class="auth-page">
  <div class="container page">
    <div class="row">

      <div class="col-md-6 offset-md-3 col-xs-12">
        <h1 class="text-xs-center">Sign up</h1>
        <p class="text-xs-center">
          <a href="">Have an account?</a>
        </p>

        <ul class="error-messages">
          <li>That email is already taken</li>
        </ul>

        <%= form_with model: @user do |f| %>
          <fieldset class="form-group">
            <%= f.text_field :username, placeholder: "Your Name", class: "form-control form-control-lg" %>
          </fieldset>
          <fieldset class="form-group">
            <%= f.text_field :email, placeholder: "Email", class: "form-control form-control-lg" %>
          </fieldset>
          <fieldset class="form-group">
            <%= f.text_field :password, placeholder: "Password", class: "form-control form-control-lg" %>
          </fieldset>
          <button class="btn btn-lg btn-primary pull-xs-right">
            Sign up
          </button>
        <% end %>
      </div>

    </div>
  </div>
</div>
